locals {
    {{ network_tier }}_tier_cidr_block = "${cidrsubnet(aws_vpc.main.cidr_block, 6, {{ network_tier_index }})}"
}
{%- for availability_zone in availability_zones %}

// https://www.terraform.io/docs/providers/aws/r/subnet.html
resource "aws_subnet" "{{ network_tier }}_tier_{{ availability_zone }}" {
    vpc_id = "${aws_vpc.main.id}"
    cidr_block = "${cidrsubnet(local.{{ network_tier }}_tier_cidr_block, 2, {{ loop.index0 }})}"
    availability_zone = "{{ availability_zone }}"
    map_public_ip_on_launch = {{ "true" if public else "false" }}

    tags = {
        Name = "${var.vpc_name}"
        Owner = "${var.vpc_owner}"
        Network_Tier = "{{ network_tier }}"
    }
}
{%- endfor %}
